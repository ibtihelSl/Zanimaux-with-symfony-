{% extends "PiAdminBundle:Association:Associationsa.html.twig" %}

{% block container4 %}

    <link href="{{ asset('Back/css/bootstrap.min.css') }}" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="{{ asset('Back/css/style.css') }}" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="{{ asset('Back/css/morris.css') }}" type="text/css"/>
    <!-- Graph CSS -->
    <link href="{{ asset('Back/css/font-awesome.css') }}" rel="stylesheet">
    <!-- jQuery -->
    <script src="{{ asset('Back/js/jquery-2.1.4.min.js') }}"></script>
    <!-- //jQuery -->
    <!-- tables -->
    <link rel="stylesheet" type="text/css" href="{{ asset('Back/css/table-style.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('Back/css/basictable.css') }}" />
    <script type="text/javascript" src="{{ asset('Back/js/jquery.basictable.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#table').basictable();

            $('#table-breakpoint').basictable({
                breakpoint: 768
            });

            $('#table-swap-axis').basictable({
                swapAxis: true
            });

            $('#table-force-off').basictable({
                forceResponsive: false
            });

            $('#table-no-resize').basictable({
                noResize: true
            });

            $('#table-two-axis').basictable();

            $('#table-max-height').basictable({
                tableWrapper: true
            });
        });
    </script>
    <!-- //tables -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css'/>
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="{{ asset('Back/css/icon-font.min.css') }}" type='text/css' />

















    <div class="agile-grids">
        <div class="agile-tables">
            <div class="w3l-table-info">

                <form method="post">
                    <h1>Liste des associations</h1> </br> </br>
                    <p>Donner le nom de l'association</p>

                    <input type="text" name="name"/>
                    <input type="submit" value="rechercher"/>
                </form>

                <table border="1">
                    <tr>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>phone</th>
                        <th>Email</th>
                        <th>Description</th>
                        <th>    </th>
                        <th>    </th>


                    </tr>
                    {%  for Association in Associations %}
                        <tr>
                            <td> {{ Association.name }}</td>
                            <td> {{ Association.adress }}</td>
                            <td> {{ Association.phone }}</td>
                            <td> {{ Association.email }}</td>
                            <td> {{ Association.description }}</td>
                           <td> <div class="icon-box col-md-3 col-sm-4"><a class="agile-icon" href="{{ path('updateAssociation',{'id':Association.id}) }}"><i class="fa fa-pencil-square-o"></i></a></div></td>
                            <td><div class="icon-box col-md-3 col-sm-4"><a class="agile-icon" href="{{ path('deleteAssociation',{'id':Association.id}) }}"><i class="fa fa-trash-o"></i></a></div></td>



                        </tr>
                    {% endfor %}
                </table>
            </div>


        </div>

    </div>
{% endblock %}