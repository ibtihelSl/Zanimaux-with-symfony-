{% extends "layout.html.twig" %}
{% block content %}
<div class="single welcome">
    <div class="container">

        {% for article in articles %}
            <h3 class="agileits-title">L'article de Dr {{ article.veterinaire_id.nom }}</h3>

        <div class="markets-grids">


            <div class="col-md-7 w3ls_single_left">
                <div class="w3ls_single_left_grid">
                    <div class="w3ls_single_left_grid_right">
                        <h3>{{ article.titre }}</h3>

                        <h5><span><i class="fa fa-calendar" aria-hidden="true">{{ article.date |date('d-m-y') }}</i></span></h5>

                        <ul>
                            <li><span class="fa fa-user" aria-hidden="true"></span>{{ article.veterinaire_id.nom }}</li>
                            <li><span class="fa fa-envelope-o" aria-hidden="true"></span><a href=""> {% for m in m %}
                                        {{   m.nb}}
                                    {% endfor %} Comments</a></li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="w3ls_single_left_grid1">
                    <p><span>{{ article.details }}
					</span></p>
                    <div class="clearfix"> </div>
                </div>

            </div>
        </div>
            <td><img src="{{ asset('images/') }}{{ article.nomImage }}"style="width: 300px; height: 300px"></td>

        {% endfor %}
        <div class="clearfix"> </div>



        <div class="agileits_three_comments">
            <h3>Comments : {% for m in m %}
                    {{   m.nb}}
                {% endfor %}</h3>

    {% for comment in comments %}
            <div class="agileits_three_comment_grid">

                <div class="agileits_tom">
                    <i class="fa fa-user"></i>
                </div>
                <div class="agileits_tom_right">
                    <div class="hardy">
                        <h4>{{ comment.user_id }}</h4>
                        <p>{{ comment.lastTime |date('d-m-y') }}</p>
                    </div>

                    <div class="clearfix"> </div>
                    <p class="lorem">{{ comment.message }}</p>
                </div>
                {% if app.user==comment.user_id %}
                <div class="reply">
                    <a href='{{ path("deleteComment",{'id':comment.id,'idarticle':id}) }}'>Delete</a>
                </div>
                {% endif %}
                <div class="clearfix"> </div>

            </div>

        {% endfor %}

        <div class="w3_leave_comment">
            <h3>Leave your <span>comment</span></h3>
            {{ form_start(form) }}
            {{ form_widget(form.message) }}
            {{ form_widget(form.Commenter) }}
            {{ form_end(form) }}
        </div>

        <div class="clearfix"> </div>



    </div>
</div>
    <br>
    <br><br>












{% endblock %}